@page "/"

@using System.Collections.Generic;  


   
<center>
    <div class="container">
        <h3>Welcome to the largest database of international results and match video with over 15,000 International Senior level Freestyle matches from 2018 to present</h3>
        <br />
        <br />
        <h2>List of tournaments / events</h2>
        <br />
        <div class="row">
            <div class="col-sm">
                <h3><a href="Database?year=2020">2020</a></h3>
                <br />
                @foreach (var tournaments in tourney2020)
                {
                    <a href="Database?event=@tournaments">@tournaments</a>
                    <br />
                }
                <br />
                <br />
            </div>
            <div class="col-sm">
                <h3><a href="Database?year=2019">2019</a></h3>
                <br />
                @foreach (var tournaments in tourney2019)
                {
                    <a href="Database?event=@tournaments">@tournaments</a>
                    <br />
                }
                <br />
                <br />
            </div>
            <div class="col-sm">
                <h3><a href="Database?year=2018">2018</a></h3>
                <br />
                @foreach (var tournaments in tourney2018)
                {
                    <a href="Database?event=@tournaments">@tournaments</a>
                    <br />
                }
                <br />
                <br />
            </div>
        </div>
    </div>
</center>


@code {


    private List<string> tourney2020 = Tournaments.events("2020");
    private List<string> tourney2019 = Tournaments.events("2019");
    private List<string> tourney2018 = Tournaments.events("2018");


    }
}

