@page "/Contact"

<h1>Let us know what you think?</h1>

<form action="https://formspree.io/f/mleonpko" method="post">
    <div class="form-group">
        <label for="Email">Email address</label>
        <fast-text-field placeholder="Enter Email" required appearance="outline" type="email" name="email"></fast-text-field>
        <small id="emailHelp" class="form-text text-muted">We promise we won't spam you</small>
    </div>
    <div class="form-group">
        <label for="Textarea">Feedback / Questions ?</label>
        <fast-text-area appearance="outline" name="body" rows="3"></fast-text-area>
    </div>

    <fast-button appearance="neutral" type="submit">Submit</fast-button>
</form>