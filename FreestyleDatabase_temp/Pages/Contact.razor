@page "/Contact"

<h1>Let us know what you think?</h1>

<form action="https://formspree.io/f/mleonpko" method="post">
    <div class="form-group">
        <label for="Email">Email address</label>
        <input type="email" class="form-control" id="Email1" aria-describedby="emailHelp" placeholder="Enter email" name="email" required>
        <small id="emailHelp" class="form-text text-muted">We promise we won't spam you</small>
    </div>
    <div class="form-group">
        <label for="Textarea">Feedback / Questions ?</label>
        <textarea class="form-control" id="Textarea1" rows="3" name="body" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>